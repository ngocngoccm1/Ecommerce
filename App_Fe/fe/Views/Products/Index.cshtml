@model IEnumerable<Models.ProductModel>;

<h1>@ViewBag.Message</h1>


<div class="container">
    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">Danh mục</h1>
            <div class="list-group">
                @foreach (var cate in ViewBag.Categories)
                {
                    <a asp-controller="Categories" asp-action="Details" asp-route-id="@cate.Value"
                        class="list-group-item">@cate.Text</a>
                }
            </div>

        </div>

        <div class="col-lg-9">
            <div class="row">

                <h1 class="my-4">Danh sách sản phẩm </h1>
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <partial name="_CardProduct" model="product" />
                    </div>
                }

                <a class="btn-primary" asp-area="" asp-controller="Products" asp-action="create">Tạo sản phẩm</a>
            </div>

        </div>
    </div>
