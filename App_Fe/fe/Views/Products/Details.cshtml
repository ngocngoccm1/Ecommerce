        <style>
            .btn-like {
                background: none;
                border: none;
                padding: 0;
                margin: 0;
                cursor: pointer;
            }

            .like-icon {
                font-size: 48px;
                /* Phóng to biểu tượng like */
                color: #efeff1;
                transition: transform 0.3s ease;
                cursor: pointer;
            }

            .like-icon.liked {
                color: #007bff;
                /* Màu khi nhấn */
            }

            .like-icon:hover {
                transform: scale(1.2);
                /* Tăng kích thước khi hover */
            }

            .like-count {
                font-size: 18px;
                color: #555;
                margin-top: 5px;
                /* Khoảng cách giữa biểu tượng và số lượt like */
            }
        </style>
        <script>
            @* let likeCount = 0; // Khởi tạo số like ban đầu là 0 *@

                function toggleLikeColor(likeCount, Id) {
                    var a = 'likeCount-' + Id;
                    const likeCountElement = document.getElementById(a);
                    const likeIcons = document.querySelectorAll('.like-icon');


                    // Tìm biểu tượng like có id tương ứng
                    let likeIcon = null;
                    likeIcons.forEach(icon => {
                        if (icon.getAttribute('data-id') === Id.toString()) {
                            likeIcon = icon;
                        }
                    });


                    // Kiểm tra nếu tìm thấy phần tử likeIcon tương ứng với Id
                    if (likeIcon) {
                        // Thay đổi màu sắc của biểu tượng like khi nhấn
                        if ()
                            likeIcon.classList.toggle('liked');

                        // Nếu biểu tượng like đã được nhấn, tăng số like lên 1, ngược lại giảm 1
                        if (likeIcon.classList.contains('liked')) {
                            likeCount += 1;
                        }
                    }
                    // Cập nhật số lượt like hiển thị trên giao diện
                    likeCountElement.textContent = likeCount;
                }


        </script>